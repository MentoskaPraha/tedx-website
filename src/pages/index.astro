---
import "../styles/global.css";
import { siteInfo } from "../content.json";
import BaseBody from "../layouts/baseBody.astro";
import BaseHead from "../layouts/baseHead.astro";
import PageLayout from "../layouts/pageLayout.astro";
import HomePageBoxes from "../components/HomePageBoxes.svelte";
import Banner from "../components/Banner.astro";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead
		title={siteInfo.title}
		metaDescription={siteInfo.metaDescription}
	/>

	<BaseBody>
		<PageLayout>
			<Banner />

			<hr />

			<HomePageBoxes client:only />

			<hr />
		</PageLayout>
	</BaseBody>
</html>
