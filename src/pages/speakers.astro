---
import "../styles/global.css";
import { siteInfo, speakers } from "../content.json";
import BaseBody from "../layouts/baseBody.astro";
import BaseHead from "../layouts/baseHead.astro";
import PageLayout from "../layouts/pageLayout.astro";
import Banner from "../components/Banner.astro";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead
		title={"Speakers | " + siteInfo.title}
		metaDescription={speakers.metaDescription}
	/>

	<BaseBody>
		<PageLayout>
			<Banner />

			<div class="m-4 p-4 bg-tedRed rounded">
				<h1 class="text-center font-bold text-4xl underline mb-2">
					Coming Soon!
				</h1>
				<p
					class="mx-5 text-justify md:w-1/2 md:mx-auto xl:w-1/3 2xl:w-1/4"
				>
					This year's speakers are coming soon. You can stay up to
					date on our social media, to be the first to know when they
					are announced.
				</p>
			</div>
		</PageLayout>
	</BaseBody>
</html>
