---
import "../styles/global.css";
import { siteInfo, speakers } from "../content.json";
import BaseBody from "../layouts/baseBody.astro";
import BaseHead from "../layouts/baseHead.astro";
import PageLayout from "../layouts/pageLayout.astro";
import Banner from "../components/Banner.astro";
import SpeakerPageBoxes from "../components/SpeakerPageBoxes.svelte";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead
		title={"Speakers | " + siteInfo.title}
		metaDescription={speakers.metaDescription}
	/>

	<BaseBody>
		<PageLayout>
			<Banner />
			<hr>
			<SpeakerPageBoxes
				client:only
			/>
		</PageLayout>
	</BaseBody>
</html>
