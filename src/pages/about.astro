---
import "../styles/global.css";
import { siteInfo, about } from "../content.json";
import BaseBody from "../layouts/baseBody.astro";
import BaseHead from "../layouts/baseHead.astro";
import PageLayout from "../layouts/pageLayout.astro";
import Banner from "../components/Banner.astro";
import AboutPageBoxes from "../components/AboutPageBoxes.svelte";
---

<!DOCTYPE html>
<html lang="en">
	<BaseHead
		title={"About | " + siteInfo.title}
		metaDescription={about.metaDescription}
	/>

	<BaseBody>
		<PageLayout>
			<Banner />

			<hr />

			<AboutPageBoxes client:only />

			<hr />
		</PageLayout>
	</BaseBody>
</html>
