---
import { siteInfo } from "../content.json";

const { title, metaDescription } = Astro.props;
---

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>{title}</title>
	<meta name="description" content={metaDescription} />
	<meta name="keywords" content={siteInfo.keywords} />
	<meta name="author" content={siteInfo.author} />

	<link
		rel="apple-touch-icon"
		sizes="180x180"
		href=`${import.meta.env.BASE_URL}icons/apple-touch-icon.png`
	/>
	<link
		rel="icon"
		type="image/png"
		sizes="32x32"
		href=`${import.meta.env.BASE_URL}icons/favicon-32x32.png`
	/>
	<link
		rel="icon"
		type="image/png"
		sizes="16x16"
		href=`${import.meta.env.BASE_URL}icons/favicon-16x16.png`
	/>
	<link
		rel="manifest"
		href=`${import.meta.env.BASE_URL}icons/site.webmanifest`
	/>
	<link
		rel="mask-icon"
		href=`${import.meta.env.BASE_URL}icons/safari-pinned-tab.sv`
		color="#606060"
	/>
	<link
		rel="shortcut icon"
		href=`${import.meta.env.BASE_URL}icons/favicon.ico`
	/>
	<meta name="msapplication-TileColor" content="#ffffff" />
	<meta
		name="msapplication-config"
		content=`${import.meta.env.BASE_URL}icons/browserconfig.xml`
	/>
	<meta name="theme-color" content="#ffffff" />
</head>
